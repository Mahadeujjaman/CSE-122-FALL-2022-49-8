//problem name:-way too long words

#include<iostream>
#include<string.h>
using namespace std;
int main()
{
    int lenght,t;
    char word[100];
     cin>>t;
    while(t--)
    {
    cin>>word;
    lenght=strlen (word);
    if(lenght>word)
    {
     cout<<word[0]<<lenght-2<<word[lenght-1]<<endl;
    }
    else
        cout<<word<<endl;
}
    return 0;
}